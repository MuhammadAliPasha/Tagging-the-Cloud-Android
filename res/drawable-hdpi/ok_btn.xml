<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#858585"
                android:endColor="#858585"
                 />
            <stroke
                android:width="1dp"
                android:color="#111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="25dp"
                android:top="12dp"
                android:right="25dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#333"
                android:startColor="#333"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="25dp"
                android:top="12dp"
                android:right="25dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#999"
                android:centerColor="#f3f3f3"
                android:startColor="#999"
                android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="#111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="25dp"
                android:top="12dp"
                android:right="25dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
