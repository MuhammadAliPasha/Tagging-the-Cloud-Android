<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#222"
                android:endColor="#222"
                 />
            <stroke
                android:width="1dp"
                android:color="#111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="7dp"
                android:top="12dp"
                android:right="7dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#333"
                android:startColor="#333"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="7dp"
                android:top="12dp"
                android:right="7dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#111"
                android:startColor="#3a3a3a" 
                android:angle="270"/>
            <stroke
                android:width="1dp"
                android:color="#111" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="7dp"
                android:top="12dp"
                android:right="7dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
