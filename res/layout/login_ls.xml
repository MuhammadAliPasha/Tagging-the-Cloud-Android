<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E2E2E2"
  android:gravity="center_horizontal">
  <RelativeLayout 
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:layout_alignParentTop="true"
  	android:background="@drawable/topmenu"
  	android:id="@+id/topMenu">
  	<Button 
  		android:layout_width="wrap_content"
  		android:layout_height="35dp"
  		android:text="Scan Tag"
  		android:textSize="13dp"
  		android:layout_marginTop="3dp"
  		android:layout_alignParentLeft="true"
  		android:id="@+id/topScanBtn"
  	/>
  	<Button 
  		android:layout_width="wrap_content"
  		android:layout_height="35dp"
  		android:text="DashBoard"
  		android:textSize="13dp"
  		android:layout_marginTop="3dp"
  		android:layout_alignParentRight="true"
  		android:id="@+id/topBackBtn"
  	/>
  </RelativeLayout>
  <LinearLayout 
  android:layout_height="fill_parent"
  android:layout_width="fill_parent"
  android:gravity="center_horizontal"
  android:orientation="vertical">
  <TextView 
  	android:layout_marginLeft="5dp"
	android:layout_marginTop="10dp" android:id="@+id/lblTitle"
	android:text="TagIt" android:layout_width="wrap_content"
	android:textColor="#000000" android:textSize="32dp" android:textStyle="bold"
	android:layout_height="wrap_content">
	</TextView>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">		
		<TextView android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp" android:id="@+id/lblUserName"
			android:text="Username:" android:layout_width="fill_parent"
			android:textColor="#000000" android:textSize="22dp"
			android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/txtUsername"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:layout_width="200dp"
			android:textColor="#000000" android:textSize="24dp" android:background="@drawable/rectc"
			android:layout_height="wrap_content">

		</EditText>
	</LinearLayout>
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp" 
			android:text="Password:" android:layout_width="wrap_content"
			android:textColor="#000000" android:textSize="22dp"
			android:layout_height="wrap_content"></TextView>
		<EditText android:id="@+id/txtPassword"
			android:layout_marginLeft="5dp"
			android:layout_marginTop="5dp"
			android:layout_width="200dp" 
			android:textColor="#000000" android:textSize="24dp" android:inputType="textPassword"
			android:background="@drawable/rectc" android:layout_height="wrap_content">

		</EditText>
	</LinearLayout>
		<Button android:layout_marginTop="25dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/btnLogin" android:layout_width="300dp"
			android:layout_centerHorizontal="true" android:layout_height="wrap_content"
			android:text="Login" android:layout_below="@+id/txtPassword" android:textSize="24dp"></Button>
    </LinearLayout>
</LinearLayout>
