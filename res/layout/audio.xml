<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E2E2E2"
    >

	<RelativeLayout android:id="@+id/TableLayout0111"
		 android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_marginTop="25dp"
		>
		<TextView android:layout_marginLeft="5dp"
			android:layout_marginTop="10dp" android:id="@+id/lblTitle"
			android:text="TagIt" android:layout_width="wrap_content"
			android:textColor="#000000" android:textSize="32dp" android:textStyle="bold"
			
			android:layout_height="wrap_content"></TextView>
			
				<TextView android:layout_marginLeft="5dp" android:layout_marginRight="5dp"
			android:layout_marginTop="30dp" android:id="@+id/lblQTitle"
			android:text="TagIt" android:layout_width="wrap_content"
			android:textColor="#000000" android:textSize="16dp" android:textStyle="bold"
			android:layout_below="@+id/lblTitle"
			android:layout_height="wrap_content"></TextView>

			<ImageView android:layout_marginTop="5dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/imgmic" android:layout_width="50dp"
			android:layout_centerHorizontal="true" android:layout_height="60dp"
			android:text="Record" android:layout_below="@+id/lblQTitle" android:textSize="24dp"
			android:background="@drawable/recorder"
				android:textColor="#ffffff"
			></ImageView>
			<Button android:layout_marginTop="5dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/btnStart" android:layout_width="fill_parent"
			android:layout_centerHorizontal="true" android:layout_height="wrap_content"
			android:text="Record" android:layout_below="@+id/imgmic" android:textSize="24dp"
			android:background="@drawable/buttons"
				android:textColor="#ffffff"
			></Button>
			<Button android:layout_marginTop="5dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/btnStop" android:layout_width="fill_parent"
			android:layout_centerHorizontal="true" android:layout_height="wrap_content"
			android:text="Stop" android:layout_below="@+id/btnStart" android:textSize="24dp"
			android:background="@drawable/buttons"
				android:textColor="#ffffff"
			></Button>
			<Button android:layout_marginTop="5dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/btnPlay" android:layout_width="fill_parent"
			android:layout_centerHorizontal="true" android:layout_height="wrap_content"
			android:text="Play" android:layout_below="@+id/btnStop" android:textSize="24dp"
			android:background="@drawable/buttons"
				android:textColor="#ffffff"
			></Button>
			
			
    		
		
<Button android:layout_marginTop="10dp"
			android:layout_below="@+id/btnPlay"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/btnReview" android:layout_width="fill_parent"
			android:layout_centerHorizontal="true" android:layout_height="wrap_content"
			android:text="Reveiw Image"  android:textSize="24dp"
			android:textColor="#ffffff"
			android:visibility="gone"
			android:background="@drawable/buttons"
			></Button>
     <Button android:layout_marginTop="25dp"
			android:layout_below="@+id/btnReview"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
			android:id="@+id/btnNext" android:layout_width="fill_parent"
			android:layout_centerHorizontal="true" android:layout_height="wrap_content"
			android:text="Next"  android:textSize="24dp"
			
			></Button>
          
</RelativeLayout>
</LinearLayout>