<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#fff"
  android:id="@+id/homeLayout">
  <RelativeLayout 
  	android:layout_width="fill_parent"
  	android:layout_height="60dp"
  	android:layout_alignParentTop="true"
  	android:background="#000000"
  	android:id="@+id/topMenu"
  	android:gravity="center_vertical">
  	<ImageButton 
  		android:layout_height = "wrap_content"
  		android:layout_width = "wrap_content"
  		android:src="@drawable/logout_icon30"
  		android:id="@+id/back"
  		android:background="#000000"
  		android:layout_alignParentLeft="true"
  		android:layout_marginLeft="10dp"
  		android:layout_marginTop="15dp"/>
	 <LinearLayout 
  		android:layout_height="wrap_content"
  		android:layout_width="wrap_content"
  		android:orientation="horizontal"
  		android:layout_alignParentRight="true"
  		android:gravity="center_vertical">
  		<TextView android:layout_height="wrap_content"
	  	android:layout_width="wrap_content"
	  	android:textColor="#3399cc"
	  	android:textSize="12dp"
	  	android:text="Tagging the Cloud"
	  	android:layout_marginTop="10dp"/>
	  	<ImageView android:layout_height="50dp"
	  	android:layout_width="50dp"
		android:src="@drawable/appicon57"
		android:layout_marginRight="10dp"
		android:layout_marginLeft = "5dp"/>
	  </LinearLayout>
  </RelativeLayout>
  <TextView 
		android:layout_height = "55dp"
		android:layout_width = "fill_parent"
		android:gravity="center"
		android:background="#3399cc"
		android:text = "Options"
		android:textColor="#fff"
		android:textSize = "18dp"
		android:textStyle="bold"
		android:layout_below="@+id/topMenu"
		android:id="@+id/processName"/>
    <GridView    
    android:id="@+id/gridview"  
    android:layout_width="fill_parent"   
    android:layout_height="wrap_content"   
	android:numColumns="2"
    android:verticalSpacing="12dip" 
    android:horizontalSpacing="10dp"
	android:layout_marginTop="5dp"
	android:layout_below="@+id/processName"
	android:background="#b9d4ef"
	android:paddingBottom="120dp"
    /> 
    <LinearLayout 
	  		android:layout_height="wrap_content" 
	  		android:orientation="horizontal" 
	  		android:layout_width="fill_parent" 
	  		android:background="@drawable/bottombar" 
	  		android:layout_below="@+id/gridview" 
	  		android:layout_alignParentBottom="true"
	  		android:id="@+id/bottombar">
	  		<Button 
	  			android:layout_height="fill_parent"
	  			android:layout_width="fill_parent" 
	  			android:layout_weight="1"
	  			android:background="@drawable/bottombarbtn_checked"
	  			android:textColor="#fff"
	  			android:textSize="12dp"
	  			android:text="TagIt"
	  			android:layout_marginTop="1dp"
	  			android:layout_marginLeft="1dp"
	  			android:layout_marginBottom="1dp"
	  			android:id="@+id/tagit"/>
	  		<Button 
	  			android:layout_height="fill_parent"
	  			android:layout_width="fill_parent" 
	  			android:layout_weight="1"
	  			android:background="@drawable/bottombarbtn_checked"
	  			android:textColor="#fff"
	  			android:textSize="12dp"
	  			android:text="Options"
	  			android:layout_marginTop="1dp"
	  			android:layout_marginLeft="1dp"
	  			android:layout_marginRight="1dp"
	  			android:layout_marginBottom="1dp"
	  			android:id="@+id/options"/>
	  		<Button 
	  			android:layout_height="fill_parent"
	  			android:layout_width="fill_parent" 
	  			android:layout_weight="1"
	  			android:background="@drawable/bottombarbtn_checked"
	  			android:textColor="#fff"
	  			android:textSize="12dp"
	  			android:text="Settings"
	  			android:layout_marginTop="1dp"
	  			android:layout_marginRight="1dp"
	  			android:layout_marginBottom="1dp"
	  			android:id="@+id/settings"/>
	 </LinearLayout>
</RelativeLayout>
