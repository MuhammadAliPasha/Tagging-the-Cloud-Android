<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#505050"
                android:endColor="#505050"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#3b414a" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#505050"
                android:startColor="#505050"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#3b414a" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#5d636c"
                android:startColor="#313944"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#3b414a" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="8dp"
                android:right="10dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
