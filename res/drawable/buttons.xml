<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff323A63"
                android:endColor="#ff323A63"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffFFCC00" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ff323A63"
                android:startColor="#ff4D5895"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffffccee" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#ff323A63"
                android:startColor="#ff4D5895"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffffccee" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
